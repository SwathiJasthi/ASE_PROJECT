             android:text="NUMBER"
             android:textColor="#000000" />

         <EditText
             android:id="@+id/bnumberET"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="2.5"
             android:drawableEnd="@drawable/close"
             android:hint="Number"
             android:inputType="phone" />
     </TableRow>-->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Due Date"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/duedateTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="#48a3e6"
            android:text="Due Date"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/setbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set Remainder" />

        <Button
            android:id="@+id/pricebtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Price Compare" />
    </TableRow>

    <ListView
        android:id="@+id/pricelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
