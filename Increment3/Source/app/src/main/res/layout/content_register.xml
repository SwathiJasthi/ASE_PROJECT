<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wallpaper1"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_email"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:hint="Email Address"
        android:drawableLeft="@mipmap/email"
        android:drawablePadding="20dp"
        android:inputType="text"
        android:fontFamily="sans-serif"
        android:textColor="?attr/actionMenuTextColor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Pwd"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:layout_below="@+id/txt_email"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:hint="Password"
        android:drawableLeft="@mipmap/icon1"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:textColor="?attr/actionMenuTextColor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_ConfirmPwd"
        android:layout_marginTop="10dp"
        android:layout_marginRight="44dp"
        android:layout_below="@+id/txt_Pwd"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:hint="Confirm Password"
        android:drawableLeft="@mipmap/icon1"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:textColor="?attr/actionMenuTextColor" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:hint="Name"
        android:drawableLeft="@mipmap/user_shape"
        android:drawablePadding="20dp"
        android:inputType="text"
        android:fontFamily="sans-serif"
        android:textColor="?attr/actionMenuTextColor"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:onClick="newUser"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/txt_ConfirmPwd"
        android:layout_alignStart="@+id/txt_ConfirmPwd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button1"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:onClick="onClickButton"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignEnd="@+id/txt_ConfirmPwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter valid username and password"
        android:id="@+id/sign_error"
        android:layout_marginTop="38dp"
        android:visibility="invisible"
        android:singleLine="false"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#00000000"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:editable="false"
        android:textColor="#000000"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText2" />


</RelativeLayout>
