<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="tutorial.cs5551.com.homeapp.Main22Activity"
    android:backgroundTintMode="src_atop"
    android:foregroundTint="#ffffff"
    android:focusable="true"
    android:background="@mipmap/home_bck">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@color/text_background"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="@string/details"
            android:textColor="@color/text"
            android:background="@color/button_background1"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="@dimen/text_textsize"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text=""
            android:textColor="@color/button_background1"
            android:background="@color/button_background1"
            android:textStyle="normal|bold"
            android:textSize="@dimen/text_textsize"
            android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="@string/serial"
            android:textColor="@color/text"
            android:background="@color/button_background1"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/textView10" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text=""
            android:textColor="#ff1100"
            android:background="@color/button_background1"
            android:textStyle="normal|bold"
            android:textSize="@dimen/text_textsize"
            android:id="@+id/textView11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">





        <TextView
            android:id="@+id/textView7"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/button_textsize"
            android:text="PRODUCT_NAME"
            android:background="@color/button_background" />

        <EditText
            android:id="@+id/ed1"
            android:layout_width="fill_parent"
            android:textSize="@dimen/button_textsize"
            android:layout_height="45dp"
            android:background="@color/button_background1"
            android:inputType="text"
            android:maxLength="100"
            android:singleLine="true">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:textSize="@dimen/button_textsize"
            android:layout_width="fill_parent"
            android:textStyle="bold"
            android:layout_height="45dp"
            android:textColor="@color/text"
            android:text="PERSON_NAME"
            android:background="@color/button_background" />

        <EditText
            android:id="@+id/ed2"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:inputType="text"
            android:maxLength="100"
            android:textSize="@dimen/button_textsize"
            android:background="@color/button_background1"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView4"
            android:textSize="@dimen/button_textsize"
            android:layout_width="fill_parent"
            android:textStyle="bold"
            android:layout_height="45dp"
            android:text="EMAIL_ID"
            android:textColor="@color/text"
            android:background="@color/button_background" />

        <EditText
            android:id="@+id/ed3"
            android:textSize="@dimen/button_textsize"
            android:background="@color/button_background1"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:inputType="textEmailAddress|text"
            android:maxLength="110"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          android:orientation="horizontal">

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@color/button_background2"
                android:text="@string/save"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/view_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:text="@string/view" />

            <Button
                android:id="@+id/sen_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@color/button_background2"
                android:text="@string/setremainder"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
